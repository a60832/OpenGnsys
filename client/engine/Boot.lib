then 
    if [ "$CHECKOS" == "false" -o "$CHECKOS" == "FALSE" ]
    then
        grub-install --force --root-directory=${SECONDSTAGE} $FIRSTSTAGE
        return $?
    fi
fi

# SI Reconfigurar segunda etapa (grub.cfg) == TRUE 
