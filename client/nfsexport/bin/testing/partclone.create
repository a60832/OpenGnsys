#!/bin/bash
OGAPI=/opt/opengnsys/lib/engine/bin/
source $OGAPI/System.lib
source $OGAPI/Disk.lib
source $OGAPI/FileSystem.lib

while getopts "c:F:s:" flags
do
   case "$flags" in
   s)
   	PART=`echo $OPTARG`
   	FS=$(ogGetFsType `ogDevToDisk $PART` | tr [:upper:] [:lower:])
	PARAM1="partclone.$FS --clone --force --source $PART"
	echo $PARAM1   	
   ;;
   esac
done	



