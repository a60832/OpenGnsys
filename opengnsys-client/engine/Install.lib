#/**
#         ogLoadEnviron
#@brief   Carga las variables de entorno genéricas.
#@author  Ramon Gomez, ETSII Universidad de Sevilla
#@date    2009-07-20
#*/
function ogLoadEnviron () {

#/// Directorios del projecto OpenGNSys.
OPENGNSYS=${OPENGNSYS:-"/opt/opengnsys"}
if [ -d $OPENGNSYS ]; then
   OGBIN=$OPENGNSYS/bin
   OGETC=$OPENGNSYS/etc
   OGLIB=$OPENGNSYS/lib
   OGAPI=$OGLIB/engine/bin
   OGLOG=$OPENGNSYS/log
   OGLOGFILE=$OPENGNSYS/log/opengnsys.log
   export PATH=$PATH:$OGBIN:$OGAPI
   #/// Cargar idioma.
   LANGFILE=$OGETC/lang.$LANG.conf
   [ -f $LANGFILE ] && source $LANGFILE
fi

#/// Declaración de códigos de error.
export OG_ERR_FORMAT=1		# Formato de ejecucion incorrecto.
export OG_ERR_NOTFOUND=2	# Fichero o dispositivo no encontrado.
export OG_ERR_PARTITION=3	# Error en particion de disco.
OG_ERR_NOTEXEC=4	# Programa o funcion no ejecutable.
OG_ERR_NOTOS=5		# Sin sistema operativo.
OG_ERR_LOCKED=6		# Particion o fichero bloqueado.
}


