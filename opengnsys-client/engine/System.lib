#*/

#/// En pruebas.
echo "Color: $1"
shift
echo "$*"
}


function ogRaiseError () {
#/**
#@function ogRaiseError int_errcode ["str_errmessage"]
#@brief    Devuelve el mensaje y el código de error correspondiente.
#@param \c errcode código de error.
#@param \c str_errmessage mensaje complementario de error.
#@return   Mensaje de error.
#@exception Código de error.
#@warning  No definidas
#@note     Primera versión para OpenGNSys
#@author   Ramon Gomez, ETSII Universidad Sevilla
#@date     2009-07-21
#*/ 

#/// En pruebas.
local MSG

case "$1" in
     $OG_ERR_FORMAT)	MSG="$MSG_ERR_FORMAT" ;;
     $OG_ERR_NOTFOUND)	MSG="$MSG_ERR_NOTFOUND $2" ;;
     *)			MSG="$MSG_ERR_GENERIC" ;;
esac

echo "${FUNCNAME[${#FUNCNAME[*]}-1]}: $MSG" >&2
return $1
}


