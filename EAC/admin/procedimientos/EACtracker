case $1 in 
status)
 ps aux | grep bttrack | grep -v grep | awk -F: '{print $3}'
;;
start)
        bttrack --reannounce_interval 10 --port 1234 --dfile /root/dstate --logfile /root/bttracker.log &
	 ps aux | grep bttrack | grep -v grep | awk -F: '{print $3}'
;; 
stop)
        pkill bttrack
;; 
restart)
        pkill bttrack
        sleep 2
        bttrack --reannounce_interval 60 --port 1234 --dfile /root/dstate --logfile /root/bttracker.log &
	 ps aux | grep bttrack | grep -v grep | awk -F: '{print $3}'
;; 
*)
        echo "Usage (start|stop|restart|status)"
;; 
esac 
exit 0
